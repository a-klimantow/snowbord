            section.features
                h2.section-title Features
                span x
                - 
                 var text = [
                     "Born Indentity: Bringing burton hardgoods to life",
                     "Jeremy Jones: On that street grind",
                     "Burton's tokyo rail days recap",
                     "Burton's tokyo rail days preview"
                     ]
                ul.features__list
                    - for(var i=0; i<4; i++)
                        li.features__item
                            figure.features__wrap
                                img(src="img/features-" + (i+1) + ".jpg" alt="")
                                figcaption.features__desc= text[i]
        
        footer.footer
            .footer__menu
                .footer__col
                    h3.footer__col_title Products
                    ul.fb__list
                        +li('fb')(href="#") Mens
                        +li('fb')(href="#") Womens
                        +li('fb')(href="#") Youth
                .footer__col
                    h3.footer__col_title About
                    ul.fb__list
                        +li('fb')(href="#") Careers and Internships
                        +li('fb')(href="#") Sponsorships
                        +li('fb')(href="#") team
                        +li('fb')(href="#") Catalog Request/Download
                .footer__col
                    h3.footer__col_title Costomer support
                    ul.fb__list
                        +li('fb')(href="#") Contact Us
                        +li('fb')(href="#") Shiping and Order Tracking
                        +li('fb')(href="#") Easy Returns
                        +li('fb')(href="#") Warranty
                        +li('fb')(href="#") Peplacement Binding Parts
                .footer__col
                    h3.footer__col_title Newsletter
                    form.footer__form(action="")
                        +input("footer__form_input", 'email', "email", "Enter your email", "Enter email")
                    ul.social__list
                        +li("social")(href="#" class="fb") facebook
                        +li("social")(href="#" class="tw") twitter
                        +li("social")(href="#" class="inst") instagram
                        +li("social")(href="#" class="pint") pinteres
                        +li("social")(href="#" class="yt") youtube
            .footer__bottom
                p &copy; 2014 Mountains Snowbords
                a.lang-cange(href="#") Change region                       

                
